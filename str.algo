algorithm Str 
var
Str :STRING :='Each character will be treated separately.'
   b, a,count,i:INTEGER :=0
    
Begin 
FOR i FROM 0 TO str.length STEP step  DO
    a=a+1
END_FOR
write(a)

REPEAT
    IF (str[i]=' ' OR str[i]='.') THEN
        count:=count+1 
    END_IF
    i=i+1
UNTIL (str[i]='.')
write(count)



